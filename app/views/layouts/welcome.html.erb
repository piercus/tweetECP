<html>
  <head>
    <title>MetaTweet</title>
	<%= stylesheet_link_tag 'welcome' %>
	<%= stylesheet_link_tag 'header' %>
	<%= stylesheet_link_tag 'footer' %>
	<%= stylesheet_link_tag 'tagcloud' %>
	<%= stylesheet_link_tag 'search' %>
	<%= stylesheet_link_tag 'autocomplete' %>
	
	
  <%= javascript_include_tag :defaults -%>
	<%= javascript_include_tag "tagcloud" -%>

	
	<script src="/javascripts/lib/inputex/lib/yui/yahoo/yahoo.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/event/event.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/dom/dom.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/connection/connection.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/datasource/datasource.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/animation/animation.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/lib/yui/autocomplete/autocomplete.js" type="text/javascript"></script>

	
	<script src="/javascripts/lib/inputex/js/inputex.js" type="text/javascript"></script>
	<script src="/javascripts/lib/inputex/js/Field.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/Group.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/Form.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/fields/StringField.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/fields/HiddenField.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/fields/AutoComplete.js" type="text/javascript"></script>	
	<script src="/javascripts/lib/inputex/js/widgets/Button.js" type="text/javascript"></script>	


	

	<script>
	
	// on convertit le hash @input et on le parse en tags et users
	var input = <%= @input.to_s -%>;
	var urlAutoCompUser = "<%= url_for :action => 'autocomplete', :type => "user"%>";
	var urlAutoCompTag = "<%= url_for :action => 'autocomplete', :type => "tag"%>";
	var urlAction = "<%= url_for :action => 'search' %>";
	var input_tags = input['tags'];
	var input_users = input['users'];
	
	// on crÃ©e deux clouds : un pour les tag et un pour les users 
	var tags = TagCloud.create();
	var users = TagCloud.create();

	// on parcourt les hash et on les convertit en cloud
	
	for (var i in input_tags) {
		if (input_tags.hasOwnProperty(i)) {
			tags.add(i, input_tags[i][0], input_tags[i][1], Date.parse('2005/04/13 00:00:00'));
		}
	}
	for (var i in input_users) {
		if (input_users.hasOwnProperty(i)) {
			users.add(i, input_users[i][0], input_users[i][1], Date.parse('2005/04/13 00:00:00'));
		}
	}
			
	tags.loadEffector('CountSize').base(10).range(5);
	tags.loadEffector('DateTimeColor');
	
	users.loadEffector('CountSize').base(10).range(5);
	users.loadEffector('DateTimeColor');

	function setup() {
		tags.setup('user_tag_cloud');
		users.setup('user_user_cloud');
	}
	
	</script>
	
</head>
  <body onload="setup();">
	<%= render :partial => "layouts/header" -%>
    <%= yield -%>
    <%= render :partial => "layouts/footer" -%>
</body>
</html>
