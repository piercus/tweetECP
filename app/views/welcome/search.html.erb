<div id="user_result">
	<div id="object">
		<% if @user %>
	    	<%= render :partial => "shared/user", :object => @user -%>	
		<% elsif @tag %>
	    	<%= render :partial => "shared/tag", :object => @tag -%>	
		<% end %>
	</div>
	<div id="sidebar">
		<% if @user %>
			<%= render :partial => "shared/usersidebar", :object => @user -%>	
		<% elsif @tag %>
	    	<%= render :partial => "shared/tagsidebar", :object => @tag -%>	
		<% end %>
	</div>
	<div id="content">
		<div id="last_links">
			<%= render :partial => "shared/lastlinks", :object => @user -%>	
		</div>
		<div id="tags">
			<%= render :partial => "shared/tagcloud", :object => @user -%>	
		</div
		<div id="users">
			<%= render :partial => "shared/usercloud", :object => @user -%>	
		</div>
	</div>
</div>