<div id="user_info">
	<div id="pic">
		<img src="http://richardwiseman.files.wordpress.com/2009/11/twitter_bird_logo_by_ipotion-1.jpg" height="100" width="100">
	</div>
	<div id="info">
		<strong><%= usersidebar.name -%></strong><br>
		<%= usersidebar.location -%><br>
		<%= usersidebar.description -%><br>
		<span class="user_following"><%= usersidebar.nfollowers -%></span> followers<br>
		<span class="user_followers"><%= usersidebar.nfollowing -%></span> following<br>
		<a href="http://www.twitter.com/<%=usersidebar.screen_name-%>">follow <%= usersidebar.screen_name -%> on <img src="http://www.music276.com/Images/twitter_logo.png" height="20px" width="55px" alt="twitter" align-bottom></a>
	</div>
</div>
<div id="recent_tweets">
	<div class="section_title";>Recents Tweets</div><br>
	<% @last_tweets.each{|t| %>
	  <div class="text"><%= t.text -%></div> 
		<div class="date">on <%= t.t_date -%></div>
	<% } %>

</div>

